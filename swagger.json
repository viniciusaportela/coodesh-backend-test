          }
        ],
        "tags": ["Events"],
        "summary": "Delete an event by ID",
        "responses": {
          "200": {
            "description": "Deleted successfully"
          }
        }
      },
      "put": {
        "parameters": [
          {
            "name": "eventId",
            "in": "path",
            "description": "ID of event",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "tags": ["Events"],
        "summary": "Update an event by ID",
        "responses": {
          "200": {
            "description": "Updated successfully"
          }
        }
      }
    },
    "/launches": {
      "post": {

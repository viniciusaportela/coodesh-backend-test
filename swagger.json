      "delete": {
        "parameters": [
          {
            "name": "launchId",
            "in": "path",
            "description": "ID of launch",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "tags": ["Launches"],
        "summary": "Delete an launch by ID",
        "responses": {
          "200": {
            "description": "Deleted successfully"
          }
        }
      },
      "put": {
        "parameters": [
          {
            "name": "launchId",
            "in": "path",
            "description": "ID of launch",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "tags": ["Launches"],
        "summary": "Update an launch by ID",
        "responses": {
          "200": {
            "description": "Updated successfully"
          }
        }
      }
    }
  }
